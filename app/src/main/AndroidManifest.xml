<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.github.budsterblue.beats"
	android:versionCode="22"
	android:versionName="@string/App_version"
	android:installLocation="auto">
	<uses-permission android:name="android.permission.VIBRATE"/> <!-- Game -->
	<application
		android:enabled="true"
		android:allowBackup="true"
		android:hardwareAccelerated="true"
		android:icon="@drawable/icon"
		android:label="@string/App_name"
		android:description="@string/App_description"
		android:theme="@style/Theme.AppCompat.DayNight" >
		<activity
			android:name="com.github.budsterblue.beats.MenuHome" >
			<intent-filter>
				<action	android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.github.budsterblue.beats.MenuCredits">
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name=".MenuCredits" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.github.budsterblue.beats.MenuFileChooser"
			android:configChanges="orientation|keyboardHidden|screenSize" />
		<activity
			android:name="com.github.budsterblue.beats.MenuSettings" />
		<activity
			android:name="com.github.budsterblue.beats.GUIGame"
			android:theme="@style/Theme.NoBackground"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:exported="true"
			/>
	</application>
</manifest>